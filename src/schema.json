[
  {
    "namespace": "mailReport",
    "functions": [
      {
        "name": "sendSMTPReport",
        "type": "function",
        "description": "Sends a phishing report via SMTP",
        "async": true,
        "parameters": [
          {
            "name": "accountID",
            "type": "string",
            "description": "MailAccountId of the MailAccount that sends the report"
          },
          {
            "name": "destination",
            "type": "string",
            "description": "Report destination E-Mail address"
          },
          {
            "name": "subject",
            "type": "string",
            "description": "Subject line of the report itself"
          },
          {
            "name": "lucyClientID",
            "type": "integer",
            "description": "Lucy client ID",
            "optional": true
          },
          {
            "name": "message",
            "type": "object",
            "description": "The reported E-Mail",
            "properties": {
              "id": {"type":  "integer"},
              "from": {"type": "string"},
              "to": {"type": "string"},
              "reporter": {"type":  "string"},
              "date": {"type": "string"},
              "subject": {"type": "string"},
              "headers": {
                "type":  "object",
                "additionalProperties": true
              },
              "preview": {"type": "string"},
              "previewType": {"type": "string"},
              "raw": {"type":  "string"}
            }
          },
          {
            "name": "additionalHeaders",
            "type": "object",
            "description": "Additional headers to include in the report",
            "properties": {
              "Reporting-Agent": {"type": "string", "optional": true},
              "Reporting-Plugin": {"type": "string", "optional": true}
            }
          },
          {
            "name": "comment",
            "type": "string",
            "description": "Optional comment",
            "optional": true
          }
        ]
      }
    ]
  }
]
